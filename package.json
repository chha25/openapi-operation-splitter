{
  "name": "openapi-operation-splitter",
  "version": "1.0.0",
  "description": "Split open-api file by operations",
  "main": "app.js",
  "scripts": {
    "build": "tsc -w",
    "start:run": "nodemon build/app.js --inputFile=input/swagger_v3.yaml --targetFileName=output/out.yaml --operations=GET, POST",
    "test": "jest --coverage",
    "view:coverage": "serve coverage/lcov-report"
  },
  "author": "Christoph Hammerbacher",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "jest": "^27.3.1",
    "nodemon": "^2.0.14",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.0.3",
    "openapi-types": "^9.3.1",
    "ts-command-line-args": "^2.2.0",
    "yaml": "^1.10.2"
  }
}