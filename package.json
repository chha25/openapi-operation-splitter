{
  "name": "openapi-operation-splitter",
  "version": "1.1.3",
  "description": "Split open-api file by operations",
  "repository": {
    "type": "git",
    "url": "https://github.com/chha25/openapi-operation-splitter.git"
  },
  "keywords": [
    "openapi",
    "open-api",
    "swagger",
    "splitter",
    "operation"
  ],
  "files": [
    "lib"
  ],
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start:run": "nodemon lib/app.js --inputFile=input/swagger_v3.yaml --targetFile=output/out.yaml --operations=GET POST",
    "test": "jest --coverage",
    "view:coverage": "serve coverage/lcov-report"
  },
  "author": "Christoph Hammerbacher",
  "license": "MIT",
  "bin": {
    "openapi-operation-splitter": "lib/app.js"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^16.11.26",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.0.3",
    "openapi-types": "^9.3.1",
    "ts-command-line-args": "^2.2.1",
    "yaml": "^2.2.2"
  }
}
